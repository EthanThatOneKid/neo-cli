{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "es2015", "dom"],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "strict": false,
    "typeRoots": ["node_modules/@types"],
    "sourceMap": true
  },
  "include": ["./src/**/*"]
}